# Blockchain Layer Environment Variables

# General Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/construct_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# XRPL Configuration
XRPL_NETWORK=testnet
XRPL_SERVER_URL=https://s.altnet.rippletest.net:51234/
XRPL_WEBSOCKET_URL=wss://s.altnet.rippletest.net:51233/
XRPL_WALLET_SEED=your_wallet_seed_here
XRPL_WALLET_ADDRESS=your_wallet_address_here

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WEBSOCKET_URL=wss://api.devnet.solana.com/
SOLANA_COMMITMENT=confirmed
SOLANA_KEYPAIR_PATH=/path/to/keypair.json

# Service Ports
XRPL_SERVICE_PORT=8001
SPL_SERVICE_PORT=8002
DATA_STORAGE_PORT=8003
TRADING_BOT_PORT=8004
ORACLE_SERVICE_PORT=8005

# Service URLs (for inter-service communication)
XRPL_SERVICE_URL=http://localhost:8001
SPL_SERVICE_URL=http://localhost:8002
DATA_STORAGE_URL=http://localhost:8003
TRADING_BOT_URL=http://localhost:8004
ORACLE_SERVICE_URL=http://localhost:8005

# Firestore Configuration
FIRESTORE_PROJECT_ID=the-construct-dev
GOOGLE_APPLICATION_CREDENTIALS=/path/to/firestore-key.json
FIRESTORE_COLLECTION_PREFIX=dev_

# Trading Bot Configuration
TRADING_ENABLED=false
TRADING_INTERVAL=60
MAX_TRADE_AMOUNT=1000
RISK_TOLERANCE=0.05
MARKET_MAKING_ENABLED=false

# Oracle Configuration
CHAINLINK_API_KEY=your_chainlink_api_key
PRICE_UPDATE_INTERVAL=300
ORACLE_TIMEOUT=30
ORACLE_RETRY_ATTEMPTS=3

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=100

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
METRICS_COLLECTION_INTERVAL=15

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/blockchain_layer.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# Development Configuration
HOT_RELOAD=true
AUTO_MIGRATE=true
SEED_DATABASE=true
MOCK_BLOCKCHAIN_CALLS=true

# Production Configuration (override in production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# External API Keys
COINGECKO_API_KEY=your_coingecko_api_key
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Notification Configuration
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=construct-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
